{
  "manifest_version": 3,
  "name": "Productivity Penguin",
  "version": "1.0",
  "description": "Blocks distracting websites to help you stay productive.",
  "permissions": ["webRequest", "webRequestBlocking", "storage", "declarativeNetRequest", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
